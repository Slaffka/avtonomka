<div class="form-horizontal">
    <div class="control-group">
        <label class="control-label" for="programname">Название программы</label>
        <div class="controls">
            <input type="text" name="name" value="{$name}" id="programname" class="programname" />
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="programperiod">Период обучения, дней</label>
        <div class="controls">
            <input type="text" value="{$period}" class="programperiod" id="programperiod"/>
        </div>
    </div>
</div>